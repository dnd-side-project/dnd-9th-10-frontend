{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/**/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "ui-components:new": "plop ui-components",
    "codegen": "java -jar ./scripts/openapi-generator-cli-6.2.1.jar generate -i http://example.com -g typescript-axios -o ./apps/web/__generate__ --type-mappings Date=string --skip-validate-spec --config ./codegenConfig.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": ">=6",
    "lint-staged": ">=10",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "turbo": "latest"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "prettier --write"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
